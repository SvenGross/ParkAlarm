<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.zkb.m335.parkalarm.ParkActivity"
    android:background="#ffffffff">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_name"
        android:hint="@string/editText_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_floor"
        android:hint="@string/editText_floor"
        android:layout_below="@+id/editText_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/toggleButton_alarm"
        android:layout_alignEnd="@+id/toggleButton_alarm"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_lot"
        android:layout_gravity="right"
        android:hint="@string/editText_lot"
        android:layout_below="@+id/editText_floor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/toggleButton_alarm"
        android:layout_alignEnd="@+id/toggleButton_alarm"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editText_arrival"
        android:hint="@string/editText_arrival"
        android:layout_below="@+id/editText_lot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/toggleButton_alarm"
        android:layout_alignEnd="@+id/toggleButton_alarm"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editText_timer"
        android:hint="@string/editText_alarm"
        android:layout_alignTop="@+id/toggleButton_alarm"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_save"
        android:text="@string/button_save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff054696"
        android:textColor="#ffffff" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editText_alarm"
        android:id="@+id/toggleButton_alarm"
        android:layout_below="@+id/editText_arrival"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editText_timer"
        android:layout_margin="5dp"
        android:checked="false"
        android:textColor="#ffffffff"
        android:textOff="@string/toggleButton_alarm_off"
        android:textOn="@string/toggleButton_alarm_on" />

</RelativeLayout>
